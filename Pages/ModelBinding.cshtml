@page
@model CSVSearchWebApp.Pages.ModelBindingModel
@{
}
<form class="form-horizontal" method="post">
    <div class="form-group">
        <label for="SearchTerm" class="col-sm-2 control-label">Search Term: </label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="SearchTerm">
        </div>
    </div>
    <div class="form-group">
     <select for="Columns" name="Columns">
          <option value="">Pick one</option>
          <option value="RankId">RankId</option>
          <option value="TeamName">TeamName</option>
          <option value="MascotName">MascotName</option>
          <option value="DateLastWin">DateLastWin</option>
          <option value="WinRate">WinRate</option>
          <option value="WinsCount">WinsCount</option>
          <option value="LossesCount">LossesCount</option>
          <option value="TiesCount">TiesCount</option>
          <option value="GamesCount">GamesCount</option>
    </select><br />
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>
<hr />
<h3>@ViewData["confirmation"]</h3>
